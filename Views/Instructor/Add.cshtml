@model Instructor


<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>

<body>
    <h1>Create a new Instructor</h1>

    <form asp-action="Add" asp-controller="Instructor" method="post">
        <div class="form-group">
            <label asp-for="InstructorId"></label> <input asp-for="InstructorId" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="FirstName"></label> <input asp-for="FirstName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label> <input asp-for="LastName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="IsTenured"></label> <input asp-for="IsTenured" class="form-control" />
        </div>

        <div class="form-group">

            <select asp-for="Rank" asp-items="@Html.GetEnumSelectList(typeof(Ranks))" class="form-control">
                <option value="">Select Rank</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="HiringDate"></label> <input asp-for="HiringDate" class="form-control" />
        </div>

        @* Phone number *@
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber">
        </div>

        @* Email address *@
        <div class="form-group">
            <label asp-for="EmailAddress"></label>
            <input asp-for="EmailAddress">
        </div>

        @* Personal url *@
        <div class="form-group">
            <label asp-for="PersonalUrl"></label>
            <input asp-for="PersonalUrl">
        </div>

        @* Unused password *@
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password">
        </div>

        <br />
        <br />
        <input type="submit" value="Create Instructor" class="btn btn-primary" />
    </form>
</body>
