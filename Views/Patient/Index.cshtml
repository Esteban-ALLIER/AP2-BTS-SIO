@model IEnumerable<Patient>
    <br>
<h1 class="text-center">Liste Patients</h1>



@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Sexe</th>
                <th>Modifier</th>
                <th>Détails</th>
                <th>Ordonnance</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Patient in Model)
            {
                <tr>
                    <TD>@Html.DisplayFor(m => Patient.Nom_p)</TD>
                    <td>@Html.DisplayFor(m => Patient.Prenom_p)</td>
                    <td>@Html.DisplayFor(m => Patient.Sexe_p)</td>
                    <td><a asp-action="Edit" asp-route-id="@Patient.PatientId" class="btn btn-primary btn-sm">Modifier</a></td>
                    <td><a asp-action="Details" asp-route-id="@Patient.PatientId" class="btn btn-primary btn-sm">Détails</a></td>
                    <td><a asp-controller="Ordonnance" asp-action="Index" asp-route-id="@Patient.PatientId" class="btn btn-info">Ordonnance</a></td>
                    <td><a asp-action="Delete" asp-route-id="@Patient.PatientId" class="btn btn-danger btn-sm">Supprimer</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Il n'y a pas de patient</p>
}
<br>
<a asp-action="Index" asp-controller="Dashboard" class="btn btn-secondary">Retour</a>
<a asp-action="Add" class="btn btn-primary">Ajouter</a>
