@model ASPBookProject.Models.AddOrdonnanceViewModel

<h2>Créer une Ordonnance pour @Model.NomPatient</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="PatientId" />

    <div class="form-group">
        <label asp-for="Posologie"></label>
        <input asp-for="Posologie" class="form-control" />
        <span asp-validation-for="Posologie" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duree_traitement"></label>
        <input asp-for="Duree_traitement" class="form-control" />
        <span asp-validation-for="Duree_traitement" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Instructions_specifique"></label>
        <textarea asp-for="Instructions_specifique" class="form-control"></textarea>
        <span asp-validation-for="Instructions_specifique" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Antécédents</label>
        <select asp-for="SelectedAntecedentIds" class="form-control" multiple>
            @foreach (var antecedent in Model.Antecedents)
            {
                <option value="@antecedent.AntecedentId">@antecedent.Libelle_a</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Allergies</label>
        <select asp-for="SelectedAllergieIds" class="form-control" multiple>
            @foreach (var allergie in Model.Allergies)
            {
                <option value="@allergie.AllergieId">@allergie.Libelle_al</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Créer l'ordonnance</button>
</form>
