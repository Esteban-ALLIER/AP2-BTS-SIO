<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <title>GSB</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <link href="~/CSS/style.css" rel="stylesheet" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-action="Index" asp-controller="Dashboard">
                    <img src="~/images/logo-gsb.png" width="90" height="50" alt="Logo GSB">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <div class="search-container mx-auto">
                            <input type="text" id="search" placeholder="Rechercher un patient par nom"
                                class="form-control">
                        </div>
                    </ul>
                </div>

                <!-- Dropdown Profil -->
                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/images/IconProfile.png" width="50" height="50" class="rounded-circle"
                            alt="Profile Icon" />
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end text-center">
                        <li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span class="navbar-text">Bonjour Dr.@User.Identity.Name</span>
                                <a asp-action="Edit" asp-controller="Account">
                                    <br>
                                    <button class="btn btn-primary btn-sm ">Modifier mes informations</button>
                                </a>
                                <br>
                                <br>
                                <a asp-action="Logout" asp-controller="Account">
                                    <button class="btn btn-danger btn-sm "> Se déconnecter </button>
                                </a>

                                <br>
                            }
                            else
                            {
                                <span class="navbar-text ">Vous êtes déconnecté.</span>
                                <a asp-action="Login" asp-controller="Account">
                                    <br><button class="btn btn-info btn-sm ">S'identifier</button>
                                </a>
                            }
                        </li>
                        <li>
                            <!-- Toggle for Dark Mode -->
                            <div class="d-flex align-items-center justify-content-between mode-sombre-toggle">
                                <input class="form-check-input" type="checkbox" id="darkModeToggle"
                                    onclick="toggleDarkMode() ">
                                <label class="form-check-label ms-3" for="darkModeToggle">Mode Sombre</label>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            </div>
        </nav>
    </header>

    <main class="container flex-grow-1">
        @RenderBody()
    </main>

    <footer class="bg-body-tertiary">
        <div class="footer text-center">
            <a asp-action="Contact" asp-controller="Contact">
                Nous contactez
            </a>
        </div>
        <div class="footer text-center">
            <p>&copy; 2024 Galaxy Swiss Bourdin (GSB). Tous droits réservés.</p>
        </div>
    </footer>
    <script src="~/JS/index.js"></script>

</body>

</html>
