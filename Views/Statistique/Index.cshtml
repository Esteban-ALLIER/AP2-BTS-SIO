@{
    ViewBag.title = "Index";
}

@model IEnumerable<Medicament>
<br>
<h1 class="text-center">Statistique des médicaments</h1>
<br>
@if (Model.Count() > 0)
{
        <div class="row">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Nombre de fois utilisés</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Medicament in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => Medicament.Libelle_med)</td>
                            <td>@Html.DisplayFor(m => Medicament.compteur)</td>
                        </tr>
}
        </tbody>
        </table>
        <div class="col-1"></div>
        
    </div>

}
else
{
    <p>Il n'y a pas de médicaments</p>
   
}